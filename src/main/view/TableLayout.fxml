				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<TableView fx:id="activityTable" editable="true" prefHeight="180.0" prefWidth="200.0" GridPane.vgrow="ALWAYS">
